---
import { Icon } from "astro-icon/components";

const { class: className, ...rest } = Astro.props;
---

<section class:list={["py-20 bg-base-200", className]} {...rest}>
  <div
    class="flex flex-col md:flex-row gap-x-40 gap-y-20 items-center mx-auto max-w-prose h-fit"
  >
    <h3 class="text-3xl font-bold max-md:text-center">
      Interested in working together?
    </h3>

    <a href="/about#contact" class="btn btn-primary">
      Shoot me a message
      <Icon name="tabler:send" width={20} height={20} />
    </a>
  </div>
</section>
