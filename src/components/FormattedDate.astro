---
interface Props {
  date: Date;
  class?: any;
}

const { date, class: className, ...rest } = Astro.props;
---

<time class:list={[className]} datetime={date.toISOString()} {...rest}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
